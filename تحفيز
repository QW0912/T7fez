import random

# Function to print the game board
def print_board(board):
    for row in board:
        print("|".join(row))
        print("-" * 5)

# Function to check if there's a winner
def check_winner(board, player):
    # Check rows, columns, and diagonals for a win
    for row in board:
        if all([spot == player for spot in row]):
            return True
    for col in range(3):
        if all([board[row][col] == player for row in range(3)]):
            return True
    if board[0][0] == board[1][1] == board[2][2] == player:
        return True
    if board[0][2] == board[1][1] == board[2][0] == player:
        return True
    return False

# Function to check if the board is full (a tie)
def is_board_full(board):
    return all([spot != " " for row in board for spot in row])

# Function to get a random empty spot for the computer
def get_computer_move(board):
    empty_spots = [(r, c) for r in range(3) for c in range(3) if board[r][c] == " "]
    return random.choice(empty_spots)

# Main function to play the game
def play_game():
    board = [[" " for _ in range(3)] for _ in range(3)]
    current_player = "X"

    # Choose the number of players
    num_players = int(input("Enter number of players (1 or 2): "))

    while True:
        print_board(board)

        if num_players == 1 and current_player == "O":  # Computer's turn
            row, col = get_computer_move(board)
            print(f"Computer chose row {row}, column {col}.")
        else:
            row = int(input(f"Player {current_player}, enter the row (0, 1, 2): "))
            col = int(input(f"Player {current_player}, enter the column (0, 1, 2): "))

        # Check if the spot is empty
        if board[row][col] == " ":
            board[row][col] = current_player
        else:
            print("This spot is already taken. Try again.")
            continue

        # Check if the current player has won
        if check_winner(board, current_player):
            print_board(board)
            print(f"Player {current_player} wins!")
            break

        # Check if the game is a tie
        if is_board_full(board):
            print_board(board)
            print("It's a tie!")
            break

        # Switch players
        current_player = "O" if current_player == "X" else "X"

# Run the game
if __name__ == "__main__":
    play_game()
